<body class="bg-ligh-grey">
    
    <header class="bg-grey p-20">
        <%- include("partials/header") %>        
    </header>
    

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="bg-img">
  <div id="carouselExampleCaptions" class="carousel slide mx-auto pd-main carousel-container m-carousel" data-bs-ride="carousel" data-bs-theme="dark">
    <div class="carousel-indicators">
      <% bikes.forEach((bike, index) => { %>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" aria-label="Slide <%= index + 1 %>"></button>
      <% }); %>
    </div>
    <div class="carousel-inner">
      <% bikes.forEach((bike, index) => { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>"> 
          <a href="/bikes/<%= bike.id %>">
          <img src="/images/products/<%= bike.image %>" class="d-block mx-auto" alt="<%= bike.ModelsByBrand.modelName %>">
          <div class="carousel-caption d-none d-md-block">
            <h5><%= bike.ModelsByBrand.modelName %></h5>
            <p><%= bike.description %></p>
          </div> 
        </a>
        </div>
      <% }); %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>  
  </div>
</div>

