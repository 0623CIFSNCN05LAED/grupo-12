<!DOCTYPE html>
<html lang="es">
<head>
  <%- include("partials/head") %>
</head>

<body class="bg-ligh-grey bg-img">
    
    <header class="bg-grey p-20">
      <%- include("partials/header") %>
    </header>
    <main>

        <form action="/register" method="post" enctype="multipart/form-data" class="vw-90 bg-register">
        <h1 class="register">Registrate!</h1>
        <div>
            <label for="nombre">Nombre:</label>
            <input type="text" name="firstName" id="firstName"  value="<%= locals.oldData ? locals.oldData.firstName : null %>">

          </div>
          <% if (locals.errors && errors.firstName) { %>
            <div class="red-text">
              <%= errors.firstName.msg %> 
            </div>  
          <% } %>

          <div>

            <label for="lastName">Apellido:</label>
            <input type="text" name="lastName" id="lastName" value="<%= locals.oldData ? locals.oldData.lastName : null %>">

          </div>
          <% if (locals.errors && errors.lastName) { %>
            <div class="red-text">
              <%= errors.lastName.msg %> 
            </div>  
          <% } %>

          <div>

            <label for="birthday">Fecha de Nacimiento:</label>
            <input type="date" name="birthday" id="birthday" value="<%= locals.oldData ? locals.oldData.birthday : null %>">

          </div>
          <% if (locals.errors && errors.birthday) { %>
            <div class="red-text">
              <%= errors.birthday.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="address">Domicilio:</label>
            <input type="text" name="address" id="address" value="<%= locals.oldData ? locals.oldData.address : null %>">
          </div>
          <% if (locals.errors && errors.address) { %>
            <div class="red-text">
              <%= errors.address.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="<%= locals.oldData ? locals.oldData.email : null %>">
          </div> 
          <% if (locals.errors && errors.email) { %>
            <div class="red-text">
              <%= errors.email.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="phone">Numero de contacto:</label>
            <input type="text" name="phone" id="phone">
          </div>

          <div>
            <label for="password">Contrase√±a:</label>
            <input type="password" name="password" id="password" >
          </div> 
          <% if (locals.errors && errors.password) { %>
            <div class="red-text">
              <%= errors.password.msg %> 
            </div>  
          <% } %>


          <div>
            <label for="avatar">Avatar:</label>
            <input type="file" id="avatar" name="avatar">
          </div>
          <% if (locals.errors && errors.avatar) { %>
            <div class="red-text">
              <%= errors.avatar.msg %> 
            </div>  
          <% } %>

          <div>
          <input type="submit" value="Enviar" class="boton-formulario"/>
          <input type="reset" value="Borrar" class="boton-formulario"/>
        </div>

    </form>
    
  </main>
     
  <%- include("partials/footer") %>

  </body>  
</html>