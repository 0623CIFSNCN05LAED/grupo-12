<!DOCTYPE html>
<html lang="es">
<head>
  <%- include("partials/head") %>
</head>

<body class="bg-ligh-grey bg-img">
    
    <header class="bg-grey p-20">
      <%- include("partials/header") %>
    </header>
    <main>
        <form action="/register" method="post" enctype="multipart/form-data" class="vw-90 bg-register">
        <h1 class="register">Registrate!</h1>
        <div>
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" id="nombre" value="<%= locals.oldData ? locals.oldData.nombre : null %>">
          </div>
          <% if (locals.errors && errors.nombre) { %>
            <div class="red-text">
              <%= errors.nombre.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="apellido">Apellido:</label>
            <input type="text" name="apellido" id="apellido" value="<%= locals.oldData ? locals.oldData.apellido : null %>">
          </div>
          <% if (locals.errors && errors.apellido) { %>
            <div class="red-text">
              <%= errors.apellido.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="nacimiento">Fecha de nacimiento:</label>
            <input type="date" name="nacimiento" id="nacimiento" value="<%= locals.oldData ? locals.oldData.nacimiento : null %>">
          </div>
          <% if (locals.errors && errors.nacimiento) { %>
            <div class="red-text">
              <%= errors.nacimiento.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="domicilio">Domicilio:</label>
            <input type="text" name="domicilio" id="domicilio" value="<%= locals.oldData ? locals.oldData.domicilio : null %>">
          </div>
          <% if (locals.errors && errors.domicilio) { %>
            <div class="red-text">
              <%= errors.domicilio.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="<%= locals.oldData ? locals.oldData.email : null %>">
          </div> 
          <% if (locals.errors && errors.email) { %>
            <div class="red-text">
              <%= errors.email.msg %> 
            </div>  
          <% } %>

          <div>
            <label for="NumContacto">Numero de contacto:</label>
            <input type="text" name="NumContacto" id="NumContacto">
          </div>

          <div>
            <label for="password">Contrase√±a:</label>
            <input type="password" name="password" id="password" >
          </div> 
          <% if (locals.errors && errors.password) { %>
            <div class="red-text">
              <%= errors.password.msg %> 
            </div>  
          <% } %>


          <div>
            <label for="avatar">Avatar:</label>
            <input type="file" id="avatar" name="avatar">
          </div>
          <% if (locals.errors && errors.avatar) { %>
            <div class="red-text">
              <%= errors.avatar.msg %> 
            </div>  
          <% } %>

          <div>
          <input type="submit" value="Enviar" class="boton-formulario"/>
          <input type="reset" value="Borrar" class="boton-formulario"/>
        </div>

    </form>
    
  </main>
    


</body>
<footer class="bg-grey padding-footer">
  <%- include("partials/footer") %>
</footer>
</html>